<% provide(:title, "Edit Post") %>
<h1>Update your post</h1>

<%= form_for(@post) do |f| %>

<h2>Moving...</h2>
<h3>From:</h3>
	<%= f.label "Street" %>
	<%= f.text_field :fromstreet, class: "form-control" %>

	<%= f.label "City" %>
	<%= f.text_field :fromcity, class: "form-control" %>

	<%= f.label "State" %>
	<%= f.select :fromstate, options_for_select(us_states) %>

	<%= f.label "Postal Code" %>
	<%= f.text_field :fromzip, class: "form-control" %>

	<h3>To:</h3>
	<%= f.label "Street" %>
	<%= f.text_field :tostreet, class: "form-control" %>

	<%= f.label "City" %>
	<%= f.text_field :tocity, class: "form-control" %>
	
	<%= f.label "State" %>
	<%= f.select :tostate, options_for_select(us_states) %>

	<%= f.label "Postal Code" %>
	<%= f.text_field :tozip, class: "form-control" %>

	<%= f.label "Bedrooms" %>
	<%= f.select(:bedrooms, options_for_select([['Studio','studio'],['One Bedroom','one'],['Two Bedroom','two'],['Three Bedroom','three'],['Four Bedroom','four'],['Five Bedrooms+','plus']]))%>

	<%= f.label "Walkup?" %>
	<%= f.check_box :walkup %>
<br>
	<%= f.label "Number of Floors" %>
	<%= f.number_field :floor %>

	<%= f.label "Desired Date to Move?" %>
	<%= f.date_field :date %>

	<%= f.label "Additional Notes" %>
	<%= f.text_area :notes, :placeholder => "Enter additional moving notes...", :size => "48x6"%>


	<%= f.submit "Save Changes", class: "btn btn-primary" %>

	<% end %>